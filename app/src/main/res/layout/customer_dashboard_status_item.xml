<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="#0000FF"
                android:id="@+id/heading_text"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Status"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:padding="10dp"
                android:id="@+id/next_task_heading"
                android:layout_below="@+id/heading_text"
                android:layout_width="match_parent"
                android:text="Next Task"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="10dp"
                android:layout_below="@+id/next_task_heading"
                android:id="@+id/next_task_value"
                android:gravity="right"
                android:text="To send Initial Quote and Design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:padding="10dp"
                android:layout_below="@+id/next_task_value"
                android:id="@+id/completed_task_value"
                android:text="Initial Quote Sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
